<div id="title" style="display: none;">{{name}}</div>


<script>
    const name = localStorage.getItem("name");
    const token = localStorage.getItem("token");

    const title = document.getElementById("title").innerHTML
    const dashboard = document.getElementById("dashboard")
    const myServices = document.getElementById("myServices")
    const purchaseGpuService = document.getElementById("purchaseGpuService")
    const factors = document.getElementById("factors")
    const userSetting = document.getElementById("userSetting")
    const ticket = document.getElementById("ticket")
    switch (title) {
        case "dashboard":
            dashboard.classList.add("active")
            break;
        case "myServices":
            myServices.classList.add("active")
            break;
        case "purchaseGpuService":
            purchaseGpuService.classList.add("active")
            break;
        case "factors":
            factors.classList.add("active")
            break;
        case "userSetting":
            userSetting.classList.add("active")
            break;
        case "ticket":
            ticket.classList.add("active")
            break;
        default:
    }
</script>